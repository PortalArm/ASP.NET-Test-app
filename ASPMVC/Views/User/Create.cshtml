@model ASPMVC.Models.User
@{
    ViewBag.Title = "Create View";
}

<h2>Добавление пользователя</h2>
@using (Html.BeginForm("InternalCreate", "User"))
{
    <div class="row"><div class="col-sm-2">Логин</div>@Html.EditorFor(m => m.Login)</div>
    <div class="row"><div class="col-sm-2">Имя</div>@Html.EditorFor(m => m.Name)</div>
    <div class="row"><div class="col-sm-2">E-mail</div>@Html.EditorFor(m => m.Email)</div>
    <div class="row"><div class="col-sm-2">Пароль</div>@Html.EditorFor(m => m.Password)</div>
    <input type="submit" value="Подтвердить" />
}
