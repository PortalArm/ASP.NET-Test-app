@model ASPMVC.Models.User
@{
    ViewBag.Title = "Details";
}

<h2>Info about user with id = @Model.Id</h2>
<div class="row">
    <div class="col-sm-2">Id</div>
    <div class="col-sm-10">@Model.Id</div>
</div>
<div class="row">
    <div class="col-sm-2">Login</div>
    <div class="col-sm-10">@Model.Login</div>
</div>
<div class="row">
    <div class="col-sm-2">Name</div>
    <div class="col-sm-10">@Model.Name</div>
</div>
<div class="row">
    <div class="col-sm-2">Email</div>
    <div class="col-sm-10">@Model.Email</div>
</div>
<div class="row">
    <div class="col-sm-2">Password</div>
    <div class="col-sm-10">@Model.Password</div>
</div>